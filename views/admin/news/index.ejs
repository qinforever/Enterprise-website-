<%include ../base/header.ejs%>

<%include ../base/headertop.ejs%>
<div class="container-fluid">
    <div class="row">
        <%include ../base/leftnav.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">学员管理
                </li>
                <li class="active">学员列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <div role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" value="<%=keyword%>" class="form-control newskey" id="name" placeholder="请输入名称">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-default newssearch">开始搜索</button>
                        </div>
                    </div>
                </form>
            </div>
            <!--列表展示-->
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr><th>编号</th><th>封面图</th><th>标题</th><th>作者</th><th>简介</th><th>分类</th><th>状态</th><th class="text-center">操作</th></tr>
                    </thead>
                    <tbody>
                        <%for(let i=0;i<data.length;i++){%>
                            <tr>
                            <td><%=i+1%></td>
                            <td><img width="50" height="50" src="<%=data[i].newpic%>" alt=""></td>
                            <td style="overflow:hidden;text-overflow:ellipsis;white-space: nowrap;width:auto;max-width:300px !important;"><%=data[i].title%></td>
                            <td style="overflow:hidden;text-overflow:ellipsis;white-space: nowrap;max-width:300px !important;"><%=data[i].author%></td>
                            <td style="overflow:hidden;text-overflow:ellipsis;white-space: nowrap;max-width:300px !important;"><%=data[i].description%></td>
                            <td><%=data[i].catename%></td>
                            <td><%if(data[i].status==1){%>显示<%}else{%>未显示<%}%></td>
                            <td class="text-center">
                                <a href="/admin/editnews?editid=<%=data[i]._id%>" class="btn btn-info">修改</a>
                                <button class="btn btn-danger delete" deleteid="<%=data[i]._id%>">删除</button>
                            </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/public/js/addnews.js"></script>
</body>
</html>