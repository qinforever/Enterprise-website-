<%include ../base/header.ejs%>

<%include ../base/headertop.ejs%>

<div class="container-fluid">
<div class="row">
    <%include ../base/leftnav.ejs%>
    <div class="col-sm-10">
        <ol class="breadcrumb">
            <li class="active">用户管理
            </li>
            <li class="active">用户列表
            </li>
        </ol>
        <div class="panel panel-default">
            <div class="panel-heading">增加用户</div>
            <div class="panel-body">
                <div class="table-responsive input-form">
                    <ul>
                        <li> 用户名称:
                            <input type="text" name="username" class="username" />
                        </li>
                        <li> 用户密码:
                            <input type="password" class="password" />
                        </li>
                        <li> 确定密码:
                            <input type="password" class="password1" />
                        </li>
                        <li> 用户头像:
                            <form class="headerPhoto" action="/updataPhoto" enctype="multipart/from-data" method="post">
                                <input class="face" type="file" name="face" multiple="multiple">
                            </form>
                            <img class="photoimg" src="" alt="">
                        </li>
                        <li> 用户状态: 显示：
                            <input type="radio" value="1" name="status" checked/> 　 
                            隐藏：<input type="radio" value="0" name="status" />
                        </li>
                        <li>
                            <button type="button" class="btn btn-success adduser">提交</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script src="/public/js/adduser.js"></script>
</body>
</html>